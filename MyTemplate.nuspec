<?xml version="1.0"?>
<package>
  <metadata>
    <!-- The unique identifier for your template package -->
    <id>MyTemplateMelgert</id>
    
    <!-- The version of your template -->
    <version>1.0.1</version>
    
    <!-- Authors of the package (your name or your organization's name) -->
    <authors>Matthew Elgert</authors>
    
    <!-- The title of your package -->
    <title>MyTemplate Project Template</title>
    
    <!-- Description of what your template provides -->
    <description>A multi-project template for creating a console app, shared library, and test project in .NET 8.0</description>
    
    <!-- A short summary of the template -->
    <summary>Multi-project template with Console App, Shared Library, and xUnit Test Project</summary>
    
    <!-- The license under which your template is published -->
    <license type="expression">MIT</license>
    
    <!-- Your projectâ€™s website or GitHub repo (optional) -->
    <projectUrl>https://github.com/mdelgert/MyTemplate</projectUrl>
    
    <!-- Tags that help identify your package -->
    <tags>dotnet new template, project template, .NET, Visual Studio template</tags>
    
    <!-- The package requires NuGet 3.0 or higher to install -->
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    
    <!-- The target framework(s) your project supports (optional but recommended) -->
    <dependencies>
      <group targetFramework=".NETCoreApp">
        <dependency id="Microsoft.NET.Sdk" version="8.0.0" />
      </group>
    </dependencies>

    <!-- Reference to the readme file -->
    <readme>content/README.md</readme>

  </metadata>
  <!-- Files to include in the package -->
  <files>
    <!-- This will include the necessary template files -->
    <file src="..\MyTemplate\**\*" target="content\MyTemplate" exclude="**\.*\**;**\bin\**;**\obj\**" />
    <file src="README.md" target="content/README.md" />
    <!-- You can specify specific paths if needed -->
  </files>
</package>
